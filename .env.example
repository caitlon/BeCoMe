# BeCoMe API Configuration
# Copy this file to .env and fill in the values

# ============================================
# Local Development (SQLite)
# ============================================

# Required: Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-generate-with-openssl

# Database URL (default: SQLite for local development)
DATABASE_URL=sqlite:///./become.db

# Optional: Token expiration in hours (default: 24)
ACCESS_TOKEN_EXPIRE_HOURS=24

# Optional: Debug mode (default: false)
DEBUG=false

# Optional: CORS origins (default: ["http://localhost:3000"])
# CORS_ORIGINS=["http://localhost:3000", "https://your-frontend.com"]

# ============================================
# Docker Configuration (use with docker-compose)
# ============================================
# Uncomment and customize these values for Docker deployment
#
# REQUIRED - generate with: openssl rand -hex 32
# SECRET_KEY=<your-generated-secret-key>
#
# Database credentials (change from defaults for production!)
# POSTGRES_USER=<your-db-user>
# POSTGRES_PASSWORD=<your-secure-password>
# POSTGRES_DB=<your-db-name>
#
# Full database URL (automatically constructed in docker-compose)
# DATABASE_URL=postgresql://<user>:<password>@db:5432/<database>
#
# Optional settings
# DEBUG=false
# UVICORN_WORKERS=4
# CORS_ORIGINS=["http://localhost:3000"]

# ============================================
# Azure Configuration (Production)
# ============================================

# Azure Database for PostgreSQL
# DATABASE_URL=postgresql://<user>:<password>@<server>.postgres.database.azure.com:5432/<database>?sslmode=require

# Azure Blob Storage (for profile photos)
# Required for photo upload functionality
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=xxx;AccountKey=xxx;EndpointSuffix=core.windows.net
# AZURE_STORAGE_ACCOUNT_NAME=youraccountname
# AZURE_STORAGE_ACCOUNT_KEY=youraccountkey
# AZURE_STORAGE_CONTAINER_NAME=become-photos
