# BeCoMe API Configuration
# Copy this file to .env and fill in the values

# Required: Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# Database URL (default: SQLite for local development)
DATABASE_URL=sqlite:///./become.db

# Optional: Token expiration in hours (default: 24)
ACCESS_TOKEN_EXPIRE_HOURS=24

# Optional: Debug mode (default: false)
DEBUG=false

# Optional: CORS origins (default: ["http://localhost:3000"])
# CORS_ORIGINS=["http://localhost:3000", "https://your-frontend.com"]

# ============================================
# Docker Configuration (use with docker-compose)
# ============================================
# DATABASE_URL=postgresql://become:become@db:5432/become
# SECRET_KEY=generate-with-openssl-rand-hex-32
# DEBUG=false
