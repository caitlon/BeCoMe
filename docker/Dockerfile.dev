# BeCoMe API - Development Dockerfile
# Single stage with hot reload support

FROM python:3.13

WORKDIR /app

# Install uv for fast dependency management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Copy dependency files
COPY pyproject.toml uv.lock ./

# Install all dependencies including dev extras (with cache)
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --locked --extra api --extra dev

# Copy application code (will be overridden by volume mount)
COPY src/ ./src/
COPY api/ ./api/

# Environment variables
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONUNBUFFERED=1
ENV DEBUG=true

# Expose port
EXPOSE 8000

# Run with uvicorn and hot reload
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
